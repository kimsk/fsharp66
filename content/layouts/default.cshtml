@using System.Linq
@helper PostDate(DateTime rawDate) {
    <time datetime="@rawDate.ToString("yyyy'-'MM'-'dd'T'HH':'mm':'ss")" pubdate data-updated="true">@rawDate.ToString("MMM d, yyyy")</time>
}

<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <title>F#unctional 66</title>
    <link rel="stylesheet" href="@Model.Root/stylesheets/styles.css">
    <link rel="stylesheet" href="@Model.Root/stylesheets/pygment_trac.css">
    <link rel="shortcut icon" href="@Model.Root/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <!--[if lt IE 9]>
    <script src="//html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- FSharp.Formatting Styles --> 
  	<link rel="stylesheet" type="text/css" media="screen" href="@Model.Root/fsharp.formatting/tooltips.css" /> 
  	<script type="text/javascript" src="@Model.Root/fsharp.formatting/tooltips.js"></script>
    <script type="text/javascript" src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=TeX-AMS-MML_HTMLorMML"></script>
  </head>
  <body>
  	<div class="wrapper">
	  <header>
	  	  <a href="@Model.Root/index.html" class="falseheader">F# และ Functional Programming</a>
        <p>บล็อกเกี่ยวกับ F# และการเขียนโปรแกรมเชิงฟังก์ชั่น</p>
        
        <h2>บทความล่าสุด</h2>
        @foreach (var post in Enumerable.Take(Model.Posts, 5))
    		{
    		    <h3 class="h2link"><a href="@Model.Root/blog/@post.Url/index.html">@post.Title</a></h3>
    		    <p class="view"><small>@PostDate(post.Date)</small><br />@post.Abstract</p>
    		}
      </header>
      <section>
		    @RenderBody()
      </section>
      <footer>
          <p style="font-size: x-small">บล็อกนี้ถูกสร้างโดยโค้ดใน <a href="https://github.com/kimsk/fsharp66">kimsk/fsharp66</a> ซึ่งเป็น clone ของ <a href="https://github.com/fsprojects/FsBlog">fsprojects/FsBlog</a> และดูแลโดย <a href="http://karlk.im">คาร์ลคิม สุวรรณมงคล</a></p>
          <p style="font-size: x-small">ฟอนต์ภาษาไทย <a href="http://www.wecraftweb.com/example/13fonts/TH%20Sarabun%20New/">TH Sarabun PSK</a> ออกแบบโดย คุณศุภกิจ เฉลิมลาภ</p>
      </footer>
  	</div>
    <script src="@Model.Root/javascripts/scale.fix.js"></script>
  </body>
</html>